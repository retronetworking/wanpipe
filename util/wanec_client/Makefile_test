####### MACROS ###############################################################

# Build options.
OS_TYPE	= _LINUX_
DEBUG	= 2

# Project file paths.
SYSINC	= /usr/src/linux/include
VPATH	= $(SYSINC)

# Tools options.
CFLAGS	= -Wall -O2 -D$(OS_TYPE) -D_DEBUG_=$(DEBUG) -D_GNUC_ -I$(SYSINC)

####### RULES ################################################################

all:	xilinx_test
	@echo "Ok."
	
xilinx_test:      	xilinx_test.c xilinx_pmc.c xilinx_cpld.c 
	$(CC) $(CFLAGS) -o $@ $^


clean:
	rm -f xilinx_test
